<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="1" author="xastapen">
        <dropPrimaryKey tableName="customer" />
        <addColumn tableName="customer">
            <column name="new_id" type="uuid" valueComputed="gen_random_uuid()">
                <constraints nullable="false" />
            </column>
        </addColumn>
        <dropColumn tableName="customer">
            <column name="id" />
        </dropColumn>
        <addPrimaryKey tableName="customer" columnNames="new_id" />
        <renameColumn tableName="customer" oldColumnName="new_id" newColumnName="id" />
    </changeSet>
</databaseChangeLog>